<resources>

    <style name="HorariosRmtc" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="HorariosRmtc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HorariosRmtc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HorariosRmtc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.HorariosRmtc" parent="android:Widget" />

    <style name="Widget.HorariosRmtc.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="Widget.HorariosRmtc.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="Widget.HorariosRmtc.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.HorariosRmtc.CardView.NoContentPadding">
        <item name="contentPadding">0dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="Widget.HorariosRmtc.TextView">

    </style>

    <style name="Widget.HorariosRmtc.TextView.WithDrawable">
        <item name="android:drawablePadding">32dp</item>
    </style>
</resources>
