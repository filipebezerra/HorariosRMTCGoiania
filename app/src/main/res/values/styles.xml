<resources>
    <style name="ThemeSection">
        <item name="sectionColorIcon">#181818</item>
        <item name="sectionColorText">#909090</item>
        <item name="sectionColorNotification">#FF5722</item>
        <item name="sectionBackgroundColorPressed">#160000FF</item>
        <item name="sectionBackgroundColorSelected">#0A0000FF</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="rippleBackport">true</item>
        <item name="multipaneSupport">true</item>
        <item name="sectionStyle">@style/ThemeSection</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania.Settings.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="searchViewStyle">@style/Widget.SearchView</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania.Settings" parent="Theme.HorariosRmtcGoiania.Settings.Base"/>

    <style name="Widget.TextViewRoboto20" parent="TextViewRoboto">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.TextViewRoboto12" parent="TextViewRoboto">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewRoboto">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/theme_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="layout">@layout/widget_search_view</item>
    </style>

    <style name="Widget.LicensesDialog" parent="android:Theme.Dialog">
        <item name="android:textColor">#FF00DFFF</item>
    </style>
</resources>
