<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.x10.filipebezerra.horariosrmtcgoiania">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".HorariosRmtcGoianiaApplication">

        <!-- Where is the SearchView Widget -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value="mx.x10.filipebezerra.horariosrmtcgoiania.view.activity.MainActivity" />

        <activity
            android:name=".view.activity.HomeActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:configChanges="keyboardHidden|orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

        <!-- Suggestions provider -->
        <provider
            android:name="mx.x10.filipebezerra.horariosrmtcgoiania.provider.SuggestionsProvider"
            android:authorities="mx.x10.filipebezerra.horariosrmtcgoiania.provider.SuggestionsProvider" />

    </application>

</manifest>
