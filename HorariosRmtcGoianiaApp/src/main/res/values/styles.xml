<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ThemeSection">
        <item name="sectionColorIcon">@color/very_dark_gray</item>
        <item name="sectionColorText">@color/dark_gray</item>
        <item name="sectionColorNotification">@color/material_pink_A400</item>
        <item name="sectionBackgroundColorPressed">#160000FF</item>
        <item name="sectionBackgroundColorSelected">#0A0000FF</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania"
        parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="rippleBackport">true</item>
        <item name="multipaneSupport">true</item>
        <item name="sectionStyle">@style/ThemeSection</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania.Settings.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="searchViewStyle">@style/Widget.SearchView</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.HorariosRmtcGoiania.Settings" parent="Theme.HorariosRmtcGoiania.Settings.Base"/>

    <style name="Widget.TextViewRoboto20" parent="TextViewRoboto">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.TextViewRoboto12" parent="TextViewRoboto">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewRoboto">
        <item name="android:textColor">@color/theme_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="layout">@layout/widget_search_view</item>
    </style>

    <style name="FloatingActionLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloatingActionMenuStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:ignore="NewApi">true</item>
        <item name="android:layout_marginBottom">@dimen/floating_action_button_margin</item>
        <item name="android:layout_marginRight">@dimen/floating_action_button_margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/floating_action_button_margin</item>
    </style>
</resources>
